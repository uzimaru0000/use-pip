{
  "name": "@uzimaru0000/use-pip",
  "version": "0.2.0",
  "description": "React Hook for Picture-in-Picture with JSX rendering via Satori",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/uzimaru0000/use-pip.git"
  },
  "homepage": "https://github.com/uzimaru0000/use-pip#readme",
  "bugs": {
    "url": "https://github.com/uzimaru0000/use-pip/issues"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "prepublishOnly": "npm run build",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "format": "biome format --write",
    "format:check": "biome format",
    "type-check": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "react",
    "hooks"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@storybook/react": "^9.1.10",
    "@storybook/react-vite": "^9.1.10",
    "@types/react": "^19.0.0",
    "@vitejs/plugin-react": "^5.0.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "storybook": "^9.1.10",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.1.9"
  },
  "dependencies": {
    "satori": "^0.18.3"
  }
}
